{
  "openapi": "3.0.0",
  "info": {
    "title": "文件下载接口",
    "description": "案件附件下载接口",
    "version": "1.0.0"
  },
  "paths": {
    "/api/cases/{caseId}/attachments/{attachmentId}/download": {
      "get": {
        "summary": "下载案件附件",
        "description": "根据案件ID和附件ID下载相应的附件文件",
        "tags": ["文件下载"],
        "parameters": [
          {
            "name": "caseId",
            "in": "path",
            "required": true,
            "description": "案件ID",
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "attachmentId",
            "in": "path",
            "required": true,
            "description": "附件ID",
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "文件下载成功",
            "content": {
              "*/*": {
                "schema": {
                  "type": "string",
                  "format": "binary"
                }
              }
            }
          },
          "404": {
            "description": "文件不存在或无权访问",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "code": {
                      "type": "integer",
                      "example": 404
                    },
                    "message": {
                      "type": "string",
                      "example": "文件不存在或无权访问"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "未授权访问",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "code": {
                      "type": "integer",
                      "example": 401
                    },
                    "message": {
                      "type": "string",
                      "example": "未授权访问"
                    }
                  }
                }
              }
            }
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}